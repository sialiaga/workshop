<div class="card m-4">
    <div class="card-header">
      <%= tweet.user.full_name  %> 
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= tweet.body %></p>
        <footer class="blockquote-footer">upload at <cite title="Source Title"><%= tweet.creation_date  %></cite></footer>
        <footer class="blockquote-footer">tags: <cite title="Source Title"><%= tweet.list_hashtag  %></cite></footer>
      </blockquote>
      <div class="mt-2">
        <%= link_to "ver", tweet, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
</div>