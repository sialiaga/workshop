<div class="container w-50">
    <h1>New Tweet</h1>
    
    <%= form_with model: @tweet do |f| %>
        Your tweet:
        <%= f.text_field :body, placeholder: "your tweet content", class: "form-control mb-3" %>
        Your tags:
        <%= f.text_field :hashtags, placeholder: "tag", class: "form-control" %>
        <%= f.submit "save", class: "btn btn-primary mt-4" %>
    <% end %>
</div>